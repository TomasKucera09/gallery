# ===========================================
# PhotoGallery CMS Configuration
# ===========================================

# Database Configuration
DB_HOST=localhost
DB_USER=your_username
DB_PASS=your_password
DB_NAME=photogallery

# Application Settings
APP_NAME="Moje Fotogalerie"
APP_URL=http://yourdomain.com
APP_LANG=cs
APP_TIMEZONE=Europe/Prague
APP_DEBUG=false
APP_ENV=production

# Security
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password
SECRET_KEY=your_random_secret_key_32_chars_long
SESSION_LIFETIME=3600
CSRF_TOKEN_LIFETIME=1800

# Image Processing
IMAGE_QUALITY=85
MAX_IMAGE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,bmp
AUTO_CONVERT_TO_WEBP=true
REMOVE_EXIF=true
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300

# FTP/SSH Configuration (for desktop app)
FTP_HOST=your_ftp_host
FTP_USER=your_ftp_user
FTP_PASS=your_ftp_password
FTP_PATH=/public_html/
FTP_PORT=21
FTP_SSL=false

# SFTP Configuration
SFTP_HOST=your_sftp_host
SFTP_USER=your_sftp_user
SFTP_PASS=your_sftp_password
SFTP_PATH=/public_html/
SFTP_PORT=22

# SSH Configuration
SSH_HOST=your_ssh_host
SSH_USER=your_ssh_user
SSH_PASS=your_ssh_password
SSH_PATH=/var/www/html/
SSH_PORT=22

# GitHub Integration
GITHUB_REPO=yourusername/photogallery-cms
GITHUB_TOKEN=your_github_token
AUTO_UPDATE=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=30

# Cache
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600

# Mail (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="PhotoGallery CMS"
